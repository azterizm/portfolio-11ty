{% extends "layouts/base.njk" %}

{% set title = "Blog" %}
{% set description = "A collection of articles and thoughts on web development, design, and more." %}

{% block head %}
<link rel="stylesheet" href="/css/blog.css" />
{% endblock %}

{% block content %}
<div id='page-wrapper' class="space-y-36 page-content no-fouc pt-16">
  
  <div class="text-center">
    <h1 class="text-6xl md:text-7xl font-bold text-animate" style="line-height:1.25;letter-spacing: -10px;">
      <span style="--delay: 0.1s; --top: 100px;">M</span>
      <span style="--delay: 0.15s; --top: 100px;">y</span>
      <span style="--delay: 0.2s; --top: 100px;">&nbsp;</span>
      <span style="--delay: 0.25s; --top: 100px;">B</span>
      <span style="--delay: 0.3s; --top: 100px;">l</span>
      <span style="--delay: 0.35s; --top: 100px;">o</span>
      <span style="--delay: 0.4s; --top: 100px;">g</span>
    </h1>
    <p class="text-xl md:text-2xl text-black max-w-2xl mx-auto leading-relaxed">
      A collection of articles on web development, design, and technology insights.
    </p>

    <!-- Newsletter Component for Blog Page -->
    <div class="newsletter-component mt-10 max-w-md mx-auto text-center">
      <button id="blog-subscribe-button" class="px-8 py-4 bg-black text-white rounded-full text-xl font-semibold hover:scale-105 transition-transform inline-flex items-center justify-center">
        Subscribe to Email List
        <svg class="w-6 h-6 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </button>

      <div id="blog-newsletter-form-container" class="hidden mt-6">
        <form data-newsletter-form class="flex flex-col md:flex-row items-center justify-center gap-4 w-full">
          <input type="email" data-newsletter-email class='px-4 py-2 rounded-full border-2 border-black bg-background flex-grow min-w-0 md:min-w-[20rem]' placeholder='person@example.com' name='email' required/>
          <button type="submit" data-newsletter-submit-btn class='px-4 py-2 rounded-full bg-black text-white hover:bg-primary hover:text-white transition-colors duration-300 w-full md:w-auto'>Submit</button>
        </form>
        <div data-newsletter-success-message class="hidden text-center mt-2">
          <p class="text-xl font-semibold text-primary mb-4">Thank you for subscribing!</p>
          <button data-newsletter-reset-btn class="px-4 py-2 rounded-full bg-black text-white hover:bg-primary hover:text-white transition-colors duration-300">Subscribe again</button>
        </div>
      </div>
    </div>

    <!-- New Tag Cloud Section -->
    <div class="mt-12 text-center">
      <h3 class="text-2xl font-bold text-black mb-6">Explore Topics</h3>
      <div class="flex flex-wrap justify-center gap-3">
        {% for tag in collections.tagList %}
        <a href="/tag/{{ tag | slug }}/" class="px-5 py-2 rounded-full bg-background text-black text-lg font-medium hover:bg-primary hover:text-white transition-colors duration-300 border-2 border-transparent hover:border-primary">
          #{{ tag }}
        </a>
        {% endfor %}
      </div>
    </div>
  </div>

  <div class="max-w-4xl mx-auto">
    <div class="grid gap-8 md:gap-12">
      {%- for post in collections.blog -%}
      <article class="blog-card group cursor-pointer" data-aos="fade-up" data-aos-delay="{{ loop.index0 * 100 }}">
        <a href="{{ post.url | url }}" class="block">
          <div class="relative overflow-hidden rounded-2xl border-2 border-black bg-pure-white p-8 md:p-10 transition-all duration-500 hover:border-primary hover:shadow-lg hover:shadow-primary/20 hover:-translate-y-2">

            <!-- Date Badge -->
            <div class="absolute top-6 right-6 bg-gradient-to-r from-primary to-primary-light text-white px-4 py-2 rounded-full text-sm font-medium">
              {{ post.date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) }}
            </div>

            <!-- Content -->
            <div class="pr-20">
              <h2 class="text-3xl md:text-4xl font-bold mb-4 text-black group-hover:text-primary transition-colors duration-300">
                {{ post.data.title }}
              </h2>

              <p class="text-lg md:text-xl text-black leading-relaxed mb-6">
              {{ post.data.description }}
              </p>
              {%- if post.data.tags -%}
              <div class="flex flex-wrap gap-2 mb-6">
                {%- for tag in post.data.tags -%}
                <span class="text-sm bg-background px-2 py-1 rounded">{{ tag }}</span>
                {%- endfor -%}
              </div>
              {%- endif -%}

              <!-- Read More Link -->
              <div class="flex items-center text-primary font-semibold group-hover:text-primary transition-colors duration-300">
                <span class="mr-2">Read Article</span>
                <svg class="w-5 h-5 transform group-hover:translate-x-2 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </div>
            </div>

            <!-- Decorative Elements -->
            <div class="absolute -bottom-4 -right-4 w-24 h-24 bg-gradient-to-br from-primary/10 to-secondary/10 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="absolute -top-2 -left-2 w-16 h-16 bg-gradient-to-br from-secondary/10 to-primary/10 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          </div>
        </a>
      </article>
      {%- endfor -%}
    </div>

    <!-- Empty State -->
    {%- if collections.blog.length == 0 -%}
    <div class="text-center py-20">
      <div class="w-24 h-24 mx-auto mb-6 bg-background rounded-full flex items-center justify-center">
        <svg class="w-12 h-12 text-black/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
      </div>
      <h3 class="text-2xl font-bold text-black mb-2">No posts yet</h3>
      <p class="text-black">Check back soon for new articles and insights!</p>
    </div>
    {%- endif -%}
  </div>
</div>
{% endblock %}

{% block scripts %}
<script src="/assets/scripts/blog-animations.js"></script>
{% endblock %}
