---
pagination:
  data: collections.blog
  size: 20
  alias: paginatedPosts
  reverse: false
permalink: "/blog{% if pagination.pageNumber > 0 %}/page/{{ pagination.pageNumber + 1 }}{% endif %}/index.html"
---

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- SEO Meta Tags -->
  <title>Azterizm | Blog</title>
  <meta name="description" content="A collection of articles and thoughts on web development, design, and more.">
  <meta name="keywords" content="{{ metadata.keywords }}">
  <meta name="author" content="{{ metadata.author.name }}">
  <link rel="canonical" href="{{ metadata.url }}{{ page.url | url }}">

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ metadata.url }}{{ page.url | url }}">
  <meta property="og:title" content="{{ title or metadata.title }}">
  <meta property="og:description" content="{{ description or metadata.description }}">
  <meta property="og:image" content="{{ metadata.url }}/assets/profile.webp">
  <meta property="og:image:alt" content="Profile picture of Abdullah Memon">

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content="{{ metadata.url }}{{ page.url | url }}">
  <meta property="twitter:title" content="{{ title or metadata.title }}">
  <meta property="twitter:description" content="{{ description or metadata.description }}">
  <meta property="twitter:image" content="{{ metadata.url }}/assets/profile.webp">
  <meta name="twitter:image:alt" content="Profile picture of Abdullah Memon">

  <link rel="icon" type="image/png" href="/assets/favicon.png">
  <link rel="stylesheet" href="/css/fonts.css" />
  <link rel="stylesheet" href="/css/global.css" />
  <link rel="stylesheet" href="/css/about.css" />
  <link rel="stylesheet" href="/css/animate.css" />
  <link rel="stylesheet" href="/css/services.css" />
  <link rel="stylesheet" href="/css/nav.css" />
  <link rel="stylesheet" href="/css/scroll-to-top.css" />
  <link rel="stylesheet" href="/tailwind.css" />
<link rel="stylesheet" href="/css/blog.css" />

<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
</head>

<body>
  <div class="container mx-auto px-4">
    {% include "components/navbar.njk" %}
    {% block content %}

    <div class="py-20">
      <div class="text-center mb-16">
        <h1 class="text-6xl md:text-7xl font-bold mb-6 text-animate" style="line-height:1.25;letter-spacing: -8px;">
          <span style="--delay: 0.1s; --top: 100px;">M</span>
          <span style="--delay: 0.15s; --top: 100px;">y</span>
          <span style="--delay: 0.2s; --top: 100px;">&nbsp;</span>
          <span style="--delay: 0.25s; --top: 100px;">B</span>
          <span style="--delay: 0.3s; --top: 100px;">l</span>
          <span style="--delay: 0.35s; --top: 100px;">o</span>
          <span style="--delay: 0.4s; --top: 100px;">g</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-600 max-w-2xl mx-auto leading-relaxed">
        A collection of articles on web development, design, and technology insights.
        </p>
      </div>
    </div>

    <div class="max-w-4xl mx-auto">
      <div class="grid gap-8 md:gap-12">
        {%- for post in paginatedPosts -%}
        <article class="blog-card group cursor-pointer" data-aos="fade-up" data-aos-delay="{{ loop.index0 * 100 }}">
          <a href="{{ post.url | url }}" class="block">
            <div class="relative overflow-hidden rounded-2xl border-2 border-gray-200 bg-white p-8 md:p-10 transition-all duration-500 hover:border-indigo-300 hover:shadow-2xl hover:shadow-indigo-100/50 hover:-translate-y-2">

              <!-- Date Badge -->
              <div class="absolute top-6 right-6 bg-gradient-to-r from-indigo-500 to-purple-600 text-white px-4 py-2 rounded-full text-sm font-medium">
                {{ post.date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) }}
              </div>

              <!-- Content -->
              <div class="pr-20">
                <h2 class="text-3xl md:text-4xl font-bold mb-4 text-gray-900 group-hover:text-indigo-600 transition-colors duration-300">
                  {{ post.data.title }}
                </h2>

                <p class="text-lg md:text-xl text-gray-600 leading-relaxed mb-6">
                {{ post.data.description }}
                </p>
                {%- if post.data.tags -%}
                <div class="flex flex-wrap gap-2 mb-6">
                  {%- for tag in post.data.tags -%}
                  <span class="text-sm bg-gray-200 px-2 py-1 rounded">{{ tag }}</span>
                  {%- endfor -%}
                </div>
                {%- endif -%}

                <!-- Read More Link -->
                <div class="flex items-center text-indigo-600 font-semibold group-hover:text-indigo-700 transition-colors duration-300">
                  <span class="mr-2">Read Article</span>
                  <svg class="w-5 h-5 transform group-hover:translate-x-2 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </div>
              </div>

              <!-- Decorative Elements -->
              <div class="absolute -bottom-4 -right-4 w-24 h-24 bg-gradient-to-br from-indigo-100 to-purple-100 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
              <div class="absolute -top-2 -left-2 w-16 h-16 bg-gradient-to-br from-yellow-100 to-orange-100 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            </div>
          </a>
        </article>
        {%- endfor -%}
      </div>
      <!-- Empty State -->
      {%- if paginatedPosts.length == 0 -%}
      <div class="text-center py-20">
        <div class="w-24 h-24 mx-auto mb-6 bg-gray-100 rounded-full flex items-center justify-center">
          <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-gray-900 mb-2">No posts yet</h3>
        <p class="text-gray-600">Check back soon for new articles and insights!</p>
      </div>
      {%- endif -%}
    </div>

    <!-- Pagination Controls -->
    {% if pagination.pages.length > 1 %}
    <nav class="flex justify-center mt-16" aria-label="Pagination">
      <ul class="inline-flex items-center space-x-2">
        {% if pagination.href.previous %}
        <li>
          <a href="{{ pagination.href.previous }}" class="px-4 py-2 rounded bg-gray-200 text-gray-700 hover:bg-indigo-100 transition">Previous</a>
        </li>
        {% endif %}
        {% for idx in pagination.pages | range %}
        <li>
          <a href="{{ pagination.hrefs[idx] }}"
            class="px-4 py-2 rounded {{ pagination.pageNumber == idx ? 'bg-indigo-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-indigo-100 transition' }}">
            {{ idx + 1 }}
          </a>
        </li>
        {% endfor %}
        {% if pagination.href.next %}
        <li>
          <a href="{{ pagination.href.next }}" class="px-4 py-2 rounded bg-gray-200 text-gray-700 hover:bg-indigo-100 transition">Next</a>
        </li>
        {% endif %}
      </ul>
    </nav>
    {% endif %}

    {% endblock %}
    {% include "components/footer.njk" %}
  </div>


  <script src="/assets/scripts/blog-animations.js"></script>
</body>

</html>
