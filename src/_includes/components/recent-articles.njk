<div id='recent-articles'>
  <div class="flex items-center justify-between z-10 sticky top-2 left-0">
    <h2 class="bg-white/10 backdrop-blur-lg text-4xl md:text-8xl">recent articles</h2>
    <a href="/blog/" class="p-4 bg-white border-2 border-black rounded-full cross-fade-link hover:scale-105 transition-transform inline-flex items-center justify-center">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#000000" viewBox="0 0 256 256">
        <path d="M221.66,133.66l-72,72a8,8,0,0,1-11.32-11.32L196.69,136H40a8,8,0,0,1,0-16H196.69L138.34,61.66a8,8,0,0,1,11.32-11.32l72,72A8,8,0,0,1,221.66,133.66Z"></path>
      </svg>
    </a>
  </div>

  <div class="mt-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {%- for post in collections.blog | slice(0, 3) -%}
      <article class="blog-card group cursor-pointer">
        <a href="{{ post.url | url }}" class="block h-full">
          <div class="relative overflow-hidden rounded-xl border-2 border-black bg-pure-white p-5 transition-all duration-300 hover:border-primary hover:shadow-lg hover:shadow-primary/10 hover:-translate-y-1 h-full flex flex-col">
            <div class="absolute top-3 right-3 bg-primary text-white px-2 py-1 rounded-full text-xs font-medium">
              {{ post.date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) }}
            </div>
            <div class="pr-14 flex-1 flex flex-col">
              <h3 class="text-lg md:text-xl font-bold mb-2 text-black group-hover:text-primary transition-colors duration-300 line-clamp-2">
                {{ post.data.title }}
              </h3>
              <p class="text-sm text-black leading-relaxed mb-3 flex-1 line-clamp-2">
                {{ post.data.description }}
              </p>
              {%- if post.data.tags -%}
              <div class="flex flex-wrap gap-1 mb-3">
                {%- for tag in post.data.tags | slice(0, 2) -%}
                <span class="text-xs bg-background px-2 py-1 rounded text-black">{{ tag }}</span>
                {%- endfor -%}
                {%- if post.data.tags.length > 2 -%}
                <span class="text-xs text-primary mt-1">+{{ post.data.tags.length - 2 }} more</span>
                {%- endif -%}
              </div>
              {%- endif -%}
              <div class="flex items-center text-primary font-medium text-sm group-hover:text-primary transition-colors duration-300 mt-auto">
                <span class="mr-2">Read Article</span>
                <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </div>
            </div>
            <div class="absolute -bottom-2 -right-2 w-10 h-10 bg-primary/5 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            <div class="absolute -top-1 -left-1 w-6 h-6 bg-secondary/10 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
        </a>
      </article>
      {%- endfor -%}
    </div>
  </div>


</div>
