<div data-active='1' id='testimonials'>
  <div class="flex items-center justify-between sticky top-2 left-0 z-10">
    <h3 class="bg-white/10 backdrop-blur-lg text-8xl">word</h3>
    <h3 id='testimonial-counter' class="bg-white/10 backdrop-blur-lg text-8xl">1/{{collections.testimonials.length}}
    </h3>
  </div>
  <div class="grid grid-cols-8">
    {% for testimonial in collections.testimonials %}
    <div id='testimonial-{{loop.index}}'
      class="grid grid-cols-8 lg:grid-cols-5 col-span-8 lg:col-span-5 mt-16 gap-x-8 {{'hidden' if not loop.first }} testimonial">
      <div class="col-span-5 lg:col-span-3 min-h-56">
        <p>{{testimonial.content | safe}}</p>
      </div>
      <div class="col-span-3 lg:col-span-2 flex flex-col justify-between">
        <div>
          <p class="text-lg">{{testimonial.data.name}}</p>
        </div>
        <div>
          {% if testimonial.data.company %}
          <p class="text-lg">{{testimonial.data.company}}</p>
          {% endif %}
          <p class="text-sm">{{testimonial.data.location}}</p>
        </div>
      </div>
    </div>
    {% endfor %}
    <div class="col-span-8 lg:col-span-3 flex flex-col justify-end mt-8" id='testimonial-action'>
      <div class="px-8 py-4 w-full bg-white border-2 border-black flex items-center justify-between rounded-full">
        <button class="group" id='testimonial-prev-btn'>
          <svg class="transition-transform duration-300 group-hover:-translate-x-4" xmlns="http://www.w3.org/2000/svg"
            width="32" height="32" fill="#000000" viewBox="0 0 256 256">
            <path
              d="M224,128a8,8,0,0,1-8,8H59.31l58.35,58.34a8,8,0,0,1-11.32,11.32l-72-72a8,8,0,0,1,0-11.32l72-72a8,8,0,0,1,11.32,11.32L59.31,120H216A8,8,0,0,1,224,128Z">
            </path>
          </svg>
        </button>
        <button class="group" id='testimonial-next-btn'>
          <svg class="transition-transform duration-300 group-hover:translate-x-4" xmlns="http://www.w3.org/2000/svg"
            width="32" height="32" fill="#000000" viewBox="0 0 256 256">
            <path
              d="M221.66,133.66l-72,72a8,8,0,0,1-11.32-11.32L196.69,136H40a8,8,0,0,1,0-16H196.69L138.34,61.66a8,8,0,0,1,11.32-11.32l72,72A8,8,0,0,1,221.66,133.66Z">
            </path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</div>
