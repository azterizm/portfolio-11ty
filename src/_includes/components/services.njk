<div id='services'>
  <div class="flex items-center justify-between sticky top-2 left-0 z-10">
    <h2 class="bg-white/10 backdrop-blur-lg text-4xl md:text-8xl">services</h2>
    <img src="/assets/star.png" alt="star icon" class='w-56 hidden sm:block' />
  </div>

  {% for service in services %}
  <div class="service-item" data-service="{{ loop.index }}">
    <div class="py-4 grid grid-cols-8 cursor-pointer service-header relative">
      <p class="select-none font-heading col-span-7 text-3xl">
        {{ service.name }}
      </p>
      <span
        class="col-span-1 text-3xl service-plus transition-transform duration-500 ease-in-out flex items-center justify-end rotate-0"
        >+</span>
    </div>
    <div
      class="service-description opacity-0 h-0 overflow-hidden transition-all duration-500 ease-in-out">
      <div class="pt-2 pb-8">
        <p class="text-black/80">{{ service.description }}</p>
        <h3 class="font-bold mt-6 mb-3 text-lg">{{ service.process_title }}</h3>
        <ol class="list-decimal list-inside space-y-3 text-black/80">
          {% for item in service.process %}
          <li>{{ item | safe }}</li>
          {% endfor %}
        </ol>
      </div>
    </div>
    {% if not loop.last %}
    <div class="grid grid-cols-8">
      <div class="bg-black h-[0.5px] col-span-8 lg:col-span-5"></div>
    </div>
    {% endif %}
  </div>
  {% endfor %}
<div class="mt-20 grid grid-cols-1 md:grid-cols-2 gap-8">
    <!-- Pricing -->
    <a href="/pricing" class="group flex flex-col justify-between border-2 border-black rounded-3xl p-8 h-full transition-all duration-300 hover:bg-black hover:text-white hover:-translate-y-1">
      <div>
        <h3 class="font-heading text-3xl mb-4">Pricing & Philosophy</h3>
        <p class="text-lg opacity-80 group-hover:opacity-100 leading-relaxed">My approach to rating and pricing projects based on strategic alignment.</p>
      </div>
      <div class="flex justify-end mt-8">
        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" viewBox="0 0 256 256" class="transform transition-transform duration-300 group-hover:translate-x-2">
          <path d="M221.66,133.66l-72,72a8,8,0,0,1-11.32-11.32L196.69,136H40a8,8,0,0,1,0-16H196.69L138.34,61.66a8,8,0,0,1,11.32-11.32l72,72A8,8,0,0,1,221.66,133.66Z"></path>
        </svg>
      </div>
    </a>

    <!-- Workflow -->
    <a href="/workflow" class="group flex flex-col justify-between border-2 border-black rounded-3xl p-8 h-full transition-all duration-300 hover:bg-black hover:text-white hover:-translate-y-1">
      <div>
        <h3 class="font-heading text-3xl mb-4">Workflow</h3>
        <p class="text-lg opacity-80 group-hover:opacity-100 leading-relaxed">A transparent look at how I take projects from concept to launch.</p>
      </div>
      <div class="flex justify-end mt-8">
        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" viewBox="0 0 256 256" class="transform transition-transform duration-300 group-hover:translate-x-2">
          <path d="M221.66,133.66l-72,72a8,8,0,0,1-11.32-11.32L196.69,136H40a8,8,0,0,1,0-16H196.69L138.34,61.66a8,8,0,0,1,11.32-11.32l72,72A8,8,0,0,1,221.66,133.66Z"></path>
        </svg>
      </div>
    </a>

    <!-- Risk Mitigations -->
    <a href="/risk-mitigations" class="group flex flex-col justify-between border-2 border-black rounded-3xl p-8 h-full transition-all duration-300 hover:bg-black hover:text-white hover:-translate-y-1">
      <div>
        <h3 class="font-heading text-3xl mb-4">Risk Mitigations</h3>
        <p class="text-lg opacity-80 group-hover:opacity-100 leading-relaxed">How I identify and neutralize technical and business risks early.</p>
      </div>
      <div class="flex justify-end mt-8">
        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" viewBox="0 0 256 256" class="transform transition-transform duration-300 group-hover:translate-x-2">
          <path d="M221.66,133.66l-72,72a8,8,0,0,1-11.32-11.32L196.69,136H40a8,8,0,0,1,0-16H196.69L138.34,61.66a8,8,0,0,1,11.32-11.32l72,72A8,8,0,0,1,221.66,133.66Z"></path>
        </svg>
      </div>
    </a>

    <!-- Scalability -->
    <a href="/scalability" class="group flex flex-col justify-between border-2 border-black rounded-3xl p-8 h-full transition-all duration-300 hover:bg-black hover:text-white hover:-translate-y-1">
      <div>
        <h3 class="font-heading text-3xl mb-4">Scalability</h3>
        <p class="text-lg opacity-80 group-hover:opacity-100 leading-relaxed">Building resilient systems designed to grow with your success.</p>
      </div>
      <div class="flex justify-end mt-8">
        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" viewBox="0 0 256 256" class="transform transition-transform duration-300 group-hover:translate-x-2">
          <path d="M221.66,133.66l-72,72a8,8,0,0,1-11.32-11.32L196.69,136H40a8,8,0,0,1,0-16H196.69L138.34,61.66a8,8,0,0,1,11.32-11.32l72,72A8,8,0,0,1,221.66,133.66Z"></path>
        </svg>
      </div>
    </a>
</div>
