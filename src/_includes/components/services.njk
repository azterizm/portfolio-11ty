<div id='services'>
  <div class="flex items-center justify-between sticky top-2 left-0 z-10">
    <h2 class="bg-white/10 backdrop-blur-lg text-8xl">services</h2>
    <img src="/assets/star.png" alt="star icon" class='w-56 hidden sm:block' />
  </div>

  {% for service in services %}
  <div class="service-item" data-service="{{ loop.index }}">
    <div class="py-4 grid grid-cols-8 cursor-pointer service-header relative">
      <p class="select-none font-heading col-span-7 text-3xl">
        {{ service.name }}
      </p>
      <span
        class="col-span-1 text-3xl service-plus transition-transform duration-500 ease-in-out flex items-center justify-end rotate-0"
        >+</span>
    </div>
    <div
      class="service-description opacity-0 h-0 overflow-hidden transition-all duration-500 ease-in-out">
      <div class="pt-2 pb-8">
        <p class="text-black/80">{{ service.description }}</p>
        <h3 class="font-bold mt-6 mb-3 text-lg">{{ service.process_title }}</h3>
        <ol class="list-decimal list-inside space-y-3 text-black/80">
          {% for item in service.process %}
          <li>{{ item | safe }}</li>
          {% endfor %}
        </ol>
      </div>
    </div>
    {% if not loop.last %}
    <div class="grid grid-cols-8">
      <div class="bg-black h-[0.5px] col-span-8 lg:col-span-5"></div>
    </div>
    {% endif %}
  </div>
  {% endfor %}
<a href="/pricing" class="w-full mt-8 py-4 px-8 bg-white border-2 border-black flex items-center justify-between rounded-full text-3xl">
    <span>See pricing & philosophy</span>
    <svg xmlns="http://www.w3.org/2000/svg" width="56" height="56" fill="#000000" viewBox="0 0 256 256">
      <path d="M221.66,133.66l-72,72a8,8,0,0,1-11.32-11.32L196.69,136H40a8,8,0,0,1,0-16H196.69L138.34,61.66a8,8,0,0,1,11.32-11.32l72,72A8,8,0,0,1,221.66,133.66Z"></path>
    </svg>
