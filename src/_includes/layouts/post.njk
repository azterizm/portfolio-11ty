---
layout: layouts/base.njk
---
<article class="prose lg:prose-xl mx-auto">
  <h1>{{ title }}</h1>
  <div class="flex flex-col sm:flex-row sm:items-center sm:space-x-2 text-gray-500 text-sm mt-2 mb-4">
    <span class="whitespace-nowrap block">Published on {{ page.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) }}</span>
    {% if tags %}
      <span class="hidden sm:inline text-gray-400 mx-2">|</span>
      <div class="flex flex-wrap gap-x-1 gap-y-1 mt-1 sm:mt-0">
        {% for tag in tags %}
          <a href="/tag/{{ tag }}/" class="text-xs text-indigo-600 no-underline hover:underline whitespace-nowrap px-2 py-1 rounded bg-gray-100">{{ tag }}</a>
        {% endfor %}
      </div>
    {% endif %}
  </div>
  <div class="mt-8">
    {{ content | safe }}
  </div>
</article>

<script src="https://giscus.app/client.js"
        data-repo="azterizm/portfolio-11ty"
        data-repo-id="R_kgDONLtaFg"
        data-category="General"
        data-category-id="DIC_kwDONLtaFs4CuPgQ"
        data-mapping="title"
        data-strict="0"
        data-reactions-enabled="1"
        data-emit-metadata="0"
        data-input-position="bottom"
        data-theme="light"
        data-lang="en"
        crossorigin="anonymous"
        async>
</script>


{% set relatedArticles = collections.blog | getRelatedPosts(tags, page.url, 3) %}

{% if relatedArticles.length > 0 %}
<section class="!mt-16 !mb-8 py-10">
  <h2 class="text-4xl md:text-5xl font-bold text-center mb-12">More Articles You Might Like</h2>
  <!-- Changed from single column to responsive grid layout -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-7xl mx-auto">
    {% for post in relatedArticles %}
    <article class="blog-card group cursor-pointer">
      <a href="{{ post.url | url }}" class="block h-full">
        <!-- Made cards more compact and consistent height -->
        <div class="relative overflow-hidden rounded-xl border-2 border-black bg-pure-white p-6 transition-all duration-300 hover:border-primary hover:shadow-lg hover:shadow-primary/10 hover:-translate-y-1 h-full flex flex-col">

          <!-- Date Badge -->
          <!-- Made date badge smaller and repositioned -->
          <div class="absolute top-4 right-4 bg-primary text-white px-3 py-1 rounded-full text-xs font-medium">
            {{ post.date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) }}
          </div>

          <!-- Content -->
          <!-- Reduced padding and made content flex to fill space -->
          <div class="pr-16 flex-1 flex flex-col">
            <!-- Reduced heading size for better grid fit -->
            <h3 class="text-xl md:text-2xl font-bold mb-3 text-black group-hover:text-primary transition-colors duration-300 line-clamp-2">
              {{ post.data.title }}
            </h3>

            <!-- Made description smaller and limited lines -->
            <p class="text-sm md:text-base text-black leading-relaxed mb-4 flex-1 line-clamp-3">
            {{ post.data.description }}
            </p>
            
            {%- if post.data.tags -%}
            <!-- Made tags smaller and limited to 2 tags -->
            <div class="flex flex-wrap gap-1 mb-4">
              {%- for tag in post.data.tags | slice(0, 2) -%}
              <span class="text-xs bg-background px-2 py-1 rounded text-black">{{ tag }}</span>
              {%- endfor -%}
              {%- if post.data.tags.length > 2 -%}
              <span class="mt-1 text-xs text-primary">+{{ post.data.tags.length - 2 }} more</span>
              {%- endif -%}
            </div>
            {%- endif -%}

            <!-- Read More Link -->
            <!-- Made read more link smaller and positioned at bottom -->
            <div class="flex items-center text-primary font-medium text-sm group-hover:text-primary transition-colors duration-300 mt-auto">
              <span class="mr-2">Read Article</span>
              <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </div>
          </div>

          <!-- Decorative Elements -->
          <!-- Made decorative elements smaller and more subtle -->
          <div class="absolute -bottom-2 -right-2 w-12 h-12 bg-primary/5 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <div class="absolute -top-1 -left-1 w-8 h-8 bg-secondary/10 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        </div>
      </a>
    </article>
    {% endfor %}
  </div>
</section>
{% endif %}



<div class='!-mb-[6.5rem] !mt-16'>
  <div class="mb-8 bg-black h-[1px]"></div>
  <div class="flex items-center justify-center md:justify-between mx-auto w-full flex-col md:flex-row">
    <p class="text-center md:text-left flex-1 text-2xl font-bold text-black leading-relaxed w-full">Subscribe for new articles.</p>
    <div class="newsletter-component flex-shrink-0 w-full md:w-auto">
      <form data-newsletter-form class="flex flex-col md:flex-row items-center justify-center gap-4 mt-2 w-full">
        <input type="email" data-newsletter-email class='px-4 py-2 rounded-full border-2 border-black bg-background flex-grow min-w-0 w-full md:min-w-[20rem]' placeholder='person@example.com' name='email' required/>
        <button type="submit" data-newsletter-submit-btn class='px-4 py-2 rounded-full bg-black text-white hover:bg-primary hover:text-white transition-colors duration-300 w-full md:w-auto'>Submit</button>
      </form>
      <div data-newsletter-success-message class="hidden text-center mt-2">
        <p class="text-xl font-semibold text-primary mb-4">Thank you for subscribing!</p>
        <button data-newsletter-reset-btn class="px-4 py-2 rounded-full bg-black text-white hover:bg-primary hover:text-white transition-colors duration-300">Subscribe again</button>
      </div>
    </div>
  </div>
</div>





