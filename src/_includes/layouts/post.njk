---
layout: layouts/base.njk
---
<article class="prose lg:prose-xl mx-auto py-20">
  <h1>{{ title }}</h1>
  <p class="text-gray-500">Published on {{ page.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) }}</p>
  {% if tags %}
  <ul class="flex flex-wrap gap-2 mt-2">
    {% for tag in tags %}
    <li><span class="text-sm bg-gray-200 px-2 py-1 rounded">{{ tag }}</span></li>
    {% endfor %}
  </ul>
  {% endif %}
  <div class="mt-8">
    {{ content | safe }}
  </div>
</article>
